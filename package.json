  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabrielhsantos/productListAPI/issues"
  },
  "homepage": "https://github.com/gabrielhsantos/productListAPI#readme",
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dd-trace": "^1.6.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^1.14.0",
    "moment": "^2.29.0",
    "mongoose": "5.10.7",
    "pg": "^8.6.0",
    "ts-jest": "^27.0.3",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cors": "^2.8.11",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.20",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/uuid": "^8.3.1",
    "factory-girl": "^5.0.4",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.3",
    "swagger-jsdoc": "^5.0.1",
    "swagger-ui-express": "^4.1.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged",
      "pre-push": "npm run build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
