{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "/src/api/server.ts",
  "scripts": {
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "build": "tsc --project tsconfig.json",
    "start": "node src/api/server.ts",
    "start:local": "nodemon src/api/server.ts",
    "ts:watch": "tsc --watch",
    "lint:staged": "lint-staged",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielhsantos/productListAPI.git"
  },
  "keywords": [],
